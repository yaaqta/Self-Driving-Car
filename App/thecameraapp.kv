MainWidget:


<MainWidget>:
    BoxLayout:
        size_hint: None, None
        size: root.size
        orientation: "vertical"
        spacing: dp(10)
        BoxLayout:
            orientation: "vertical"
            size_hint: None, 0.2
            width: root.width
            Label:
                text: "IP address"
                size_hint: None, 0.3
                width: root.width
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, 0.4
                width: root.width/2
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Label:
                    text: "192"
                    size_hint: 0.1, 0.8
                Label:
                    text: "."
                    size_hint: 0.05, 0.8
                Label:
                    text: "168"
                    size_hint: 0.1, 0.8
                Label:
                    text: "."
                    size_hint: 0.05, 0.8
                TextInput:
                    id: third
                    text: "1"
                    size_hint: 0.1, 0.8
                    padding_y:
                        [self.height/2.0 - (self.line_height/2.0) * len(self._lines), 0]
                Label:
                    text: "."
                    size_hint: 0.05, 0.8
                TextInput: 
                    id: final
                    text: "9"
                    size_hint: 0.1, 0.8
                    padding_y:
                        [self.height/2.0 - (self.line_height/2.0) * len(self._lines), 0]
            Button:
                text: "Connect"
                size_hint: None, 0.3
                pos_hint: {"center_x": 0.5}
                on_press: root.connect()
